<body>
    <h1>Calculadora de INSS</h1>
    <input type="number" id="salario" placeholder="Salário">
    <button onclick="calcularINSS()">Calcular INSS</button>
    <p id="resultado"></p>
</body>
<script>
    function calcularINSS() {
        let salario = parseFloat(document.getElementById("salario").value);
        let resultado = document.getElementById('resultado');
        let desconto;
        let salarioFinal;

        if (salario <= 1212.00) {
            desconto = salario * 0.075;
        } else if (salario <= 2427.35) {
            desconto = salario * 0.09;
        } else if (salario <= 3641.03) {
            desconto = salario * 0.12;
        } else if (salario <= 7087.22) {
            desconto = salario * 0.14;
        } else {
            desconto = 7087.22 * 0.14;
        }

        salarioFinal = salario - desconto;

        resultado.innerHTML = `Desconto de INSS: R$ ${desconto.toFixed(2)}<br>Salário Final: R$ ${salarioFinal.toFixed(2)}`;
    }
</script>
