<body>
    <h1>Examinador de Triângulo</h1>
    <input type="number" id="ladoA" placeholder="Lado A">
    <input type="number" id="ladoB" placeholder="Lado B">
    <input type="number" id="ladoC" placeholder="Lado C">
    <button onclick="verificarTriangulo()">Verificar</button>
    <p id="resultado"></p>
</body>
<script>
    function verificarTriangulo() {
        let ladoA = parseFloat(document.getElementById('ladoA').value);
        let ladoB = parseFloat(document.getElementById('ladoB').value);
        let ladoC = parseFloat(document.getElementById('ladoC').value);
        let resultado = document.getElementById('resultado');

        if (ladoA === ladoB && ladoB === ladoC) {
            resultado.innerHTML = "EQUILÁTERO";
        } else if (ladoA !== ladoB && ladoB !== ladoC && ladoA !== ladoC) {
            resultado.innerHTML = "ESCALENO";
        } else {
            resultado.innerHTML = "ISÓSCELES";
        }
    }
</script>
