<body>
    <h1>Correção de Preço</h1>
    <input type="text" id="nome" placeholder="Nome da Mercadoria">
    <input type="number" id="preco" placeholder="Preço">
    <button onclick="reajustarPreco()">Calcular Reajuste</button>
    <p id="resultado"></p>
</body>
<script>
    function reajustarPreco() {
        let nome = document.getElementById('nome').value;
        let preco = parseFloat(document.getElementById('preco').value);
        let resultado = document.getElementById('resultado');
        let aumento;

        if (preco < 1000) {
            aumento = preco * 0.05;
        } else {
            aumento = preco * 0.07;
        }

        let novoPreco = preco + aumento;

        resultado.innerHTML = `Mercadoria: ${nome}<br> Novo Preço: R$ ${novoPreco.toFixed(2)}`;
    }
</script>
