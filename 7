<body>
    <h1>Calculadora de Reajuste Salarial</h1>
    <input type="number" id="salario" placeholder="Salário Atual">
    <button onclick="calcularReajuste()">Calcular Reajuste</button>
    <p id="resultado"></p>
</body>
<script>
    function calcularReajuste() {
        let salarioAtual = parseFloat(document.getElementById('salario').value);
        let percentualAumento;
        let resultado = document.getElementById('resultado');

        if (salarioAtual >= 1500 && salarioAtual < 1750) {
            percentualAumento = 0.15; // 15% de aumento
        } else if (salarioAtual >= 1750 && salarioAtual < 2000) {
            percentualAumento = 0.12; // 12% de aumento
        } else if (salarioAtual >= 2000 && salarioAtual < 3000) {
            percentualAumento = 0.09; // 9% de aumento
        } else if (salarioAtual >= 3000) {
            percentualAumento = 0.06; // 6% de aumento
        } else {
            percentualAumento = 0; // Sem aumento
        }

        let aumento = salarioAtual * percentualAumento;
        let novoSalario = salarioAtual + aumento;

        resultado.innerHTML = `Aumento: R$ ${aumento.toFixed(2)}<br>Novo Salário: R$ ${novoSalario.toFixed(2)}`;
    }
</script>
