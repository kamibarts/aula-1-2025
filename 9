    p {
        margin: 10px;
        color: #333;
    }
</style>
<body>
    <h1>Calculadora de Descontos</h1>
    <input type="number" id="preco" placeholder="Preço da Peça">
    <select id="tipoPeca">
        <option value="camisa">Camisa</option>
        <option value="bermuda">Bermuda</option>
        <option value="calca">Calça</option>
    </select>
    <button onclick="calcularDesconto()">Calcular Desconto</button>
    <p id="resultado"></p>
</body>
<script>
    function calcularDesconto() {
        let preco = parseFloat(document.getElementById('preco').value);
        let tipoPeca = document.getElementById('tipoPeca').value;
        let desconto;
        let resultado = document.getElementById('resultado');

        if (tipoPeca === 'camisa') {
            desconto = 0.20; // 20% de desconto
        } else if (tipoPeca === 'bermuda') {
            desconto = 0.10; // 10% de desconto
        } else if (tipoPeca === 'calca') {
            desconto = 0.15; // 15% de desconto
        }

        let valorDesconto = preco * desconto;
        let precoFinal = preco - valorDesconto;

        resultado.innerHTML = `Desconto: R$ ${valorDesconto.toFixed(2)}<br>Preço Final: R$ ${precoFinal.toFixed(2)}`;
    }
</script>
</html>
